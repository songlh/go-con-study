-	case m.Term == 0:
-		// local message
-	case m.Term > r.Term:
-		lead := m.From
-		if m.Type == msgVote {
-			lead = none
-		}
-		r.becomeFollower(m.Term, lead)
-	case m.Term < r.Term:
-		// ignore
-	}
-
-	stepmap[r.state](r, m)
-	return nil
-}
