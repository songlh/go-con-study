+func TestIsOutOfBounds(t *testing.T) {
+	offset := int64(100)
+	num := int64(100)
+	l := &raftLog{offset: offset, ents: make([]Entry, num)}
+
+	tests := []struct {
+		index int64
+		w     bool
+	}{
+		{offset - 1, true},
+		{offset, false},
+		{offset + num/2, false},
+		{offset + num - 1, false},
+		{offset + num, true},
+	}
+
+	for i, tt := range tests {
+		g := l.isOutOfBounds(tt.index)
+		if g != tt.w {
+			t.Errorf("#%d: isOutOfBounds = %v, want %v", i, g, tt.w)
+		}
+	}
+}
