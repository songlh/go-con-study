+func newStateMachine(id int64, peers []int64) *raft {
+	if id == none {
+		panic("cannot use none id")
+	}
+	sm := &raft{id: id, clusterId: none, lead: none, raftLog: newLog(), ins: make(map[int64]*index)}
+	for _, p := range peers {
+		sm.ins[p] = &index{}
+	}
+	sm.reset(0)
+	return sm
+}
