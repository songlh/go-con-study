-func stepCandidate(sm *stateMachine, m Message) bool {
-	switch m.Type {
-	case msgProp:
-		return false
-	case msgApp:
-		sm.becomeFollower(sm.term.Get(), m.From)
-		sm.handleAppendEntries(m)
